#!/bin/bash

# Define the name of the private key
PRIVATE_KEY_NAME="school"

# Number of bits in the key
BITS=4096

# Passphrase for the key
PASSPHRASE="betty"

# Generate the RSA key pair
ssh-keygen -t rsa -b "$BITS" -C "" -N "$PASSPHRASE" -f "$PRIVATE_KEY_NAME"

# Display the key information
echo "Generating public/private rsa key pair."
echo "Your identification has been saved in $PRIVATE_KEY_NAME."
echo "Your public key has been saved in $PRIVATE_KEY_NAME.pub."
echo "The key fingerprint is:"
ssh-keygen -lf "$PRIVATE_KEY_NAME"
echo "The key's randomart image is:"
ssh-keygen -lvf "$PRIVATE_KEY_NAME"

# List the generated files
ls -l "$PRIVATE_KEY_NAME" "$PRIVATE_KEY_NAME.pub"

